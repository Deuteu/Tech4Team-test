<p id="notice"><%= notice %></p>

<h1>Listing Spectacles</h1>

<table>
  <thead>
    <tr>
      <th>Cle</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spectacles.each do |spectacle| %>
      <tr>
        <td><%= spectacle.cle %></td>
        <td><%= spectacle.name %></td>
        <td><%= link_to 'Show', spectacle %></td>
        <td><%= link_to 'Edit', edit_spectacle_path(spectacle) %></td>
        <td><%= link_to 'Destroy', spectacle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Spectacle', new_spectacle_path %>
